<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/foodscroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TableLayout
            android:id="@+id/foodtable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:stretchColumns="0"
            android:shrinkColumns="0">

        </TableLayout>

    </ScrollView>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/history_help"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
        
        <Button
        	android:id="@+id/h_display_toggle"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="@string/history_yesterday"
        	android:onClick="displayToggle" />
        
        <Button
        	android:id="@+id/h_button_back"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="@string/button_back"
        	android:onClick="goBack" />
    </LinearLayout>



</LinearLayout>